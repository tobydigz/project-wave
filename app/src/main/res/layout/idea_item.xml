<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#81C784"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Username" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="5dp"
                tools:text="9:01pm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userIdea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="idea" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/btn_downvote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#757575"
                app:srcCompat="@drawable/ic_thumb_down_black"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/text_downvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/default_score"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/btn_upvote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#009688"
                app:srcCompat="@drawable/ic_thumb_up_black"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/text_upvote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/default_score"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="#EF5350"
                app:srcCompat="@drawable/ic_heart"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/text_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/default_score"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loya.android.rudigo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.register.RegisterActivity" />
        <activity android:name=".presentation.MainActivity" />
        <activity android:name=".presentation.userprofile.UserProfileActivity" />
        <activity android:name=".presentation.ideadetails.IdeaDetailsActivity"
        android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.newidea.NewThreadActivity"></activity>
    </application>

</manifest>